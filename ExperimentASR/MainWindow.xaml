<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeechMaster"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:ui1="http://schemas.lepo.co/wpfui/2022/xaml" 
		xmlns:Models="clr-namespace:SpeechMaster.Models" 
		x:Class="SpeechMaster.MainWindow"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        TextOptions.TextFormattingMode="Display" 
        Title="Transcription" Height="720" Width="1280" 
		KeyboardNavigation.TabNavigation="Cycle"
		Loaded="Window_Loaded" Closing="Window_Closing">
	<Window.Resources>
		<SolidColorBrush x:Key="AccentBrush" Color="#0057B7"/>
		<SolidColorBrush x:Key="AccentLightBrush" Color="#FFD700"/>
		<!-- Styles for Big Play Button -->
		<Style x:Key="RoundButtonStyle" TargetType="{x:Type Button}">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Border Background="{TemplateBinding Background}" CornerRadius="60">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<DockPanel LastChildFill="True">
		<StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
			<StatusBarItem HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>

					<StackPanel Grid.Column="0" Orientation="Horizontal">
						<TextBlock x:Name="StatusText" Text="Ready" VerticalAlignment="Center"/>

						<Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>

						<ProgressBar x:Name="progressTranscript" Height="10" Width="100" VerticalAlignment="Center"/>
					</StackPanel>

					<StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
						<Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>

						<TextBlock x:Name="txtGPUAcceleration" Text="GPUAcceleration" VerticalAlignment="Center"/>

						<Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>

						<TextBlock x:Name="txtFFMPEGPath" Text="FFMPEG" VerticalAlignment="Center"/>
					</StackPanel>
				</Grid>
			</StatusBarItem>
		</StatusBar>

		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Import" Click="BtnSelectFile_Click" />
				<Separator />
				<MenuItem Header="_Exit" Click="MenuExit_Click" />
			</MenuItem>

			<MenuItem Header="_Tools" >
				<MenuItem Header="_Settings" Click="MenuSettings_Click" />
				<MenuItem Header="_Benchmark" Click="MenuBenchmark_Click" />
				<MenuItem Header="_Download Media" Click="MenuVideoDownloader_Click"/>
				<MenuItem Header="_Logs" Click="MenuLogs_Click"/>
			</MenuItem>

			<MenuItem Header="_Help">
				<MenuItem Header="_About" Click="MenuAbout_Click" />
			</MenuItem>
		</Menu>

		<Grid Margin="10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="350"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Border Grid.Column="0" 
            BorderBrush="Gray" 
            BorderThickness="1"
            CornerRadius="8" 
            Padding="16" 
            Margin="0,0,10,0">

				<StackPanel x:Name="panelTranscriptOptions" VerticalAlignment="Center">
					<Button x:Name="btnStartTranscribe" Height="120" 
					Width="120" Margin="0,10,0,0"
                    Style="{StaticResource RoundButtonStyle}"
                    Background="DarkBlue"
                    Foreground="White" FontSize="48" FontWeight="Bold"
                    Content="▶" 
					TabIndex="0"
                    Click="BtnStartTranscribe_Click"/>

					<TextBlock x:Name="blockStartTranscription" Text="Start transcription" 
                       HorizontalAlignment="Center" FontSize="16" Margin="0,10,0,10" FontWeight="Bold"/>

					<TextBlock x:Name="blockImportLocalFile" 
                       Margin="0,10,0,5" Text="Import local file"/>

					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>
						<TextBox x:Name="txtAudioFilePath" IsReadOnly="True" 
						VerticalContentAlignment="Center"/>
						<Button x:Name="btnFileSelect" Grid.Column="1" TabIndex="1"
						Content="📁" Width="40" Margin="5,0,0,0" Click="BtnSelectFile_Click"/>
					</Grid>

					<Separator Height="20"/>

					<Grid Margin="0,10,0,0">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>

						<TextBlock x:Name="blockQueue" Text="Transcription Queue" Margin="0,0,0,10" Grid.Row="0" FontSize="16"/>

						<DataGrid x:Name="QueueGrid" Grid.Row="1" AutoGenerateColumns="False" 
                          IsReadOnly="True" Height="200" 
						  SelectionChanged="QueueGrid_SelectionChanged"
                          ToolTip="Displays current audio files queued for transcription">
							<DataGrid.Columns>
								<DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*"/>
								<DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
							</DataGrid.Columns>
						</DataGrid>
					</Grid>
				</StackPanel>
			</Border>

			<Grid Grid.Column="1" Margin="10,0,0,0">
				<Grid.RowDefinitions>
					<RowDefinition Height="1*" MinHeight="150"/>
					<RowDefinition Height="5"/>
					<RowDefinition Height="2*" MinHeight="150"/>
				</Grid.RowDefinitions>

				<GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="#F0F0F0" ShowsPreview="True"/>

				<Border x:Name="borderTranscriptOutput" 
                        BorderBrush="Gray" BorderThickness="1" CornerRadius="8" 
                        Padding="10" Background="White" Grid.RowSpan="3">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="*"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>

						<ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
							<TextBox x:Name="boxTranscriptOutput" 
                                     TextWrapping="Wrap" AcceptsReturn="True"
                                     FontSize="16" 
                                     Background="Transparent"
                                     BorderThickness="0" IsReadOnly="True"
                                     Text="Select a file from the list above to view transcription..." 
                                     HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
						</ScrollViewer>

						<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
							<TextBlock x:Name="txtSelectedFileStats" VerticalAlignment="Center" Foreground="Gray" Margin="0,0,20,0" FontStyle="Italic"/>

							<Button x:Name="btnCopy" Content="Copy Text" Margin="0,0,5,0" Click="BtnCopyText_Click"/>
							<Button x:Name="btnSaveTxt" Content="Save to TXT" Click="BtnSaveTxt_Click"/>
						</StackPanel>
					</Grid>
				</Border>
			</Grid>
		</Grid>
	</DockPanel>
</Window>