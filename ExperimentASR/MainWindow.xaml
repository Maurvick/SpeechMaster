<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentASR"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:ui1="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:Models="clr-namespace:ExperimentASR.Models" x:Class="ExperimentASR.MainWindow"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        TextOptions.TextFormattingMode="Display" 
        Title="Transcription Window" Height="720" Width="1280">
    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#0057B7"/>
        <SolidColorBrush x:Key="AccentLightBrush" Color="#FFD700"/>

        <Style x:Key="RoundButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="60">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Margin" Value="0, 10, 0, 10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">

        <StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <StatusBarItem HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock x:Name="blockStatus" Text="Ready" VerticalAlignment="Center"/>

                        <Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>

                        <ProgressBar x:Name="progressTranscript" Height="10" Width="100" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock x:Name="textAsrLocation" Text="ASR path" VerticalAlignment="Center"/>

                        <Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>

                        <TextBlock x:Name="txtGPUAcceleration" Text="GPUAcceleration" VerticalAlignment="Center"/>

                        <Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>

                        <TextBlock x:Name="txtFFMPEGPath" Text="FFMPEG" VerticalAlignment="Center"/>

                        <Border Width="1" Background="#FFCCCCCC" Margin="10,2"/>

                        <TextBlock x:Name="txtPythonExecutable" Text="PythonExecutable" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </StatusBarItem>
        </StatusBar>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Import" />
                <Separator />
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_Edit" />
            <MenuItem Header="_Help">
                <MenuItem Header="_About" />
            </MenuItem>
        </Menu>

        <TabControl>
            <TabItem Header="Main">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="280"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1"
                            CornerRadius="8" Padding="16" Margin="0,0,10,0">
                        <StackPanel x:Name="panelTranscriptOptions" VerticalAlignment="Center" Height="536">

                            <Button x:Name="btnStartTranscribe" Height="120" Width="120" Margin="0,10,0,0"
                                    Style="{StaticResource RoundButtonStyle}"
                                    Background="{StaticResource AccentBrush}"
                                    Foreground="White" FontSize="48" FontWeight="Bold"
                                    Content="▶" 
                                    Click="Transcribe_Click"/>

                            <TextBlock x:Name="blockStartTranscription" Text="Start transcription" 
                                       HorizontalAlignment="Center" FontSize="16" Margin="0,10,0,10"/>

                            <TextBlock x:Name="blockImportLocalFile" 
                                       Margin="0,10,0,5" Text="Import local file"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtAudioFilePath" IsReadOnly="True" VerticalContentAlignment="Center"/>
                                <Button x:Name="btnFileSelect" Grid.Column="1" Content="📁" Width="40" Margin="5,0,0,0" Click="SelectFile_Click"/>
                            </Grid>


                            <Button x:Name="btnCancelTranscribe" Content="Cancel Transcription" 
                                    Background="#D32F2F" Foreground="White" Margin="0,10,0,0" Click="Transcribe_Click"/>

                            <Separator Margin="0,20"/>

                            <TextBlock x:Name="blockAsrModel" Text="ASR Model" FontWeight="SemiBold"/>
                            <ComboBox x:Name="comboModelSelect" SelectedIndex="0" Margin="0,5,0,0">
                                <ComboBoxItem Content="Whisper"/>
                                <ComboBoxItem Content="Google Speech-To-Text"/>
                                <ComboBoxItem Content="Deepspeech"/>
                                <ComboBoxItem Content="Vosk"/>
                            </ComboBox>
                            <TextBlock x:Name="blockModelSize" Text="Model Size" Margin="0,10,0,0" FontWeight="SemiBold"/>
                            <RadioButton x:Name="radioWhisperTiny" Content="Tiny" IsChecked="True"/>
                            <RadioButton x:Name="radioWhisperBase" Content="Base"/>
                            <RadioButton x:Name="radioWhisperSmall" Content="Small"/>
                            <RadioButton x:Name="radioWhisperMedium" Content="Medium"/>
                        </StackPanel>
                    </Border>

                    <Border x:Name="borderTranscriptOutput" Grid.Column="1" BorderBrush="Gray" BorderThickness="1"
                            CornerRadius="8" Padding="20" Margin="5,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBox x:Name="boxTranscriptOutput" 
                                         TextWrapping="Wrap" AcceptsReturn="True"
                                         FontSize="18" 
                                         Background="Transparent"
                                         BorderThickness="0" IsReadOnly="True"
                                         Text="Transcript result will appear here..." />
                            </ScrollViewer>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                <Button x:Name="btnCopy" Content="Copy" Margin="0,0,5,0" Click="btnCopy_Click"/>
                                <Button x:Name="btnSaveTxt" Content="Save TXT" Margin="0,0,5,0" Click="btnSaveTxt_Click"/>
                                <Button x:Name="btnSaveSrt" Content="Save SRT" Click="btnSaveSrt_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1"
                            CornerRadius="8" Padding="16" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock x:Name="blockWaveform" Text="Waveform" FontWeight="SemiBold" Margin="0,0,0,10"/>

                            <Border Height="120" 
                                    CornerRadius="8">
                                <TextBlock x:Name="blockWaveformVisualizer" Text="Waveform Visualizer" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <TextBlock x:Name="blockTimer" Text="Timer:" Margin="0,20,0,0"/>
                            <TextBlock x:Name="blockTime" Text="00:00:00" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>

                            <TextBlock x:Name="blockAccuracyWer" Text="Accuracy (WER):" Margin="0,20,0,0"/>
                            <TextBlock x:Name="blockAccuracyPercent" Text="-- %" FontSize="20" Foreground="#4CAF50"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="History">
                <Grid>
                    <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DataGrid_SelectionChanged">
                        <DataGrid.DataContext>
                            <Models:TranscriptHistory/>
                        </DataGrid.DataContext>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Settings">
                <Grid Margin="20">
                    <StackPanel>
                        <GroupBox Header="Models Configuration" Padding="10">
                            <StackPanel>
                                <CheckBox x:Name="checkWhisper" Content="Use Whisper (Local)" IsChecked="False"/>
                                <CheckBox x:Name="checkGoogleSpeech" Content="Use Google Speech-To-Text (Cloud)" IsChecked="True"/>
                                <CheckBox x:Name="checkDeepspeech" Content="Use Deepspeech" IsChecked="False"/>
                            </StackPanel>
                        </GroupBox>

                        <TextBlock x:Name="labelAdditionalSettings" Text="Additional Settings" 
                                   Foreground="{StaticResource AccentBrush}" 
                                   Margin="0,20,0,10" FontWeight="Bold"/>
                        <CheckBox Content="Enable GPU Acceleration" IsChecked="True"/>
                        <CheckBox Content="Save audio to disk after recognition" IsChecked="False"/>
                        <Grid/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>