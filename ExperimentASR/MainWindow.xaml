<Window x:Name="TranscriptionWindow" x:Class="ExperimentASR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentASR"
        mc:Ignorable="d"
        TextOptions.TextFormattingMode="Display" SnapsToDevicePixels="True"
        Background="#F1F1F1" Foreground="#262626"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Transcription Window" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="10, 13, 10, 10"/>
            <Setter Property="IsChecked" Value="True"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Menu Bar docked to the Top -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Import" />
                <Separator />
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_Edit" />
            <MenuItem Header="_Help" />
        </Menu>

        <!-- Status Bar docked to the Bottom -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="Ready" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <TextBlock Text="Item Count: 0" />
            </StatusBarItem>
        </StatusBar>
        
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBox x:Name="AudioPath" Width="300" HorizontalAlignment="Left" IsReadOnly="True"/>
                <Button Width="100" Content="Обрати..." HorizontalAlignment="Left" 
                Margin="320,0,0,0" Click="SelectFile_Click"/>
            </Grid>
            <Button x:Name="btnStartTranscribe" Grid.Row="1" 
                    Content="Розпізнати"
                    Margin="5,10,561,10"
                    Height="35"
                    Click="Transcribe_Click"/>
            <TextBox Grid.Row="2"
                     x:Name="OutputBox"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True" IsReadOnly="True" Margin="0,32,220,31"/>
            <Button x:Name="btnCancelTranscribe" Grid.Row="1" 
                Content="Відмінити"
                Margin="109,0,0,0"
                Height="35"
                Click="Transcribe_Click"/>
            <StatusBar x:Name="statusBar" Grid.Row="2" Margin="-9,302,-10,-7"/>
            <Label x:Name="lblTranscriptStatus" Content="...Idle" HorizontalAlignment="Left" Margin="0,302,0,-6" Grid.Row="2"/>
        </Grid>
    </DockPanel>
</Window>
