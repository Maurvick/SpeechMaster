<Window x:Name="TranscriptionWindow" x:Class="ExperimentASR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentASR"
        mc:Ignorable="d"
        TextOptions.TextFormattingMode="Display" SnapsToDevicePixels="True"
		FontFamily="Candara" FontSize="16" ShowInTaskbar="True"
        Background="#F1F1F1" Foreground="#262626"
        Title="Transcription Window" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="10, 13, 10, 10"/>
            <Setter Property="IsChecked" Value="True"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBox x:Name="AudioPath" Width="300" HorizontalAlignment="Left" 
             Margin="10,0,0,0" IsReadOnly="True"/>
            <Button Width="100" Content="Обрати..." HorizontalAlignment="Left" 
            Margin="320,0,0,0" Click="SelectFile_Click"/>
            <Label x:Name="lblTranscriptStatus" Content="...Idle" HorizontalAlignment="Left" 
           Margin="722,0,0,0"/>
        </Grid>

        <Button x:Name="btnStartTranscribe" Grid.Row="1" 
                Content="Розпізнати"
                Margin="0,10,390,10"
                Height="35"
                Click="Transcribe_Click"/>

        <TextBox Grid.Row="2"
                 x:Name="OutputBox"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True" IsReadOnly="True"/>
        <Button x:Name="btnCancelTranscribe" Grid.Row="1" 
            Content="Відмінити"
            Margin="395,10,0,10"
            Height="35"
            Click="Transcribe_Click"/>
        <StatusBar Grid.Row="2"/>
    </Grid>
</Window>
