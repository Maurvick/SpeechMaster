<Window x:Class="ExperimentASR.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentASR.Views"
		xmlns:ui="http://schemas.modernwpf.com/2019"
		ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="About" Height="450" Width="800">

	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
			<!-- Application Icon -->
			<Viewbox Width="48" Height="48" Margin="0,0,15,0">
				<Path Fill="#007ACC" Data="M12,2A3,3 0 0,1 15,5V11A3,3 0 0,1 12,14A3,3 0 0,1 9,11V5A3,3 0 0,1 12,2M19,11C19,14.53 16.39,17.44 13,17.93V21H11V17.93C7.61,17.44 5,14.53 5,11H7A5,5 0 0,0 12,16A5,5 0 0,0 17,11H19Z" />
			</Viewbox>

			<StackPanel VerticalAlignment="Center">
				<TextBlock Text="ExperimentASR" FontSize="24" FontWeight="Bold" Foreground="White"/>
				<TextBlock x:Name="TxtVersion" Text="Version 1.0.0.0" FontSize="14" />
			</StackPanel>
		</StackPanel>

		<TextBlock Grid.Row="1" TextWrapping="Wrap" Margin="0,0,0,20" FontSize="20">
            An offline speech recognition tool powered by OpenAI's Whisper model. 
            Designed for secure, local transcription of educational and specialized content.
		</TextBlock>

		<GroupBox Grid.Row="2" Header="Open Source Acknowledgments" BorderBrush="#444"  Margin="0,0,0,20">
			<ScrollViewer VerticalScrollBarVisibility="Auto">
				<StackPanel Margin="10">
					<TextBlock Text="• OpenAI Whisper (Model Architecture)" Margin="0,2"/>
					<TextBlock Text="• whisper.cpp (Inference Engine)" Margin="0,2"/>
					<TextBlock Text="• NAudio (Audio Processing)" Margin="0,2"/>
					<TextBlock Text="• CommunityToolkit.Mvvm (Architecture)" Margin="0,2"/>
					<TextBlock Text="• Parquet.Net (Big Data Support)" Margin="0,2"/>
					<TextBlock Text="• FFmpeg (Media Conversion)" Margin="0,2"/>
					<TextBlock Text="• ModernWPF (User Interface)" Margin="0,2"/>
				</StackPanel>
			</ScrollViewer>
		</GroupBox>

		<Grid Grid.Row="3">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<StackPanel Grid.Column="0" VerticalAlignment="Center">
				<TextBlock Text="© 2026 Belinsky Andrii" FontSize="12" Foreground="#888"/>
				<TextBlock FontSize="12">
                    <Hyperlink NavigateUri="https://github.com/maulwin/ExperimentAsr" RequestNavigate="Hyperlink_RequestNavigate">
                        Visit Project Repository
                    </Hyperlink>
				</TextBlock>
			</StackPanel>

			<Button x:Name="BtnOk" Click="BtnOk_Click" Grid.Column="1" Content="OK" Width="80" Height="30"/>
		</Grid>
	</Grid>
</Window>
