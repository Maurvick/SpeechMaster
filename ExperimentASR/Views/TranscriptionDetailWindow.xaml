<Window x:Class="SpeechMaster.Views.TranscriptionDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Transcription Details" Height="600" Width="800">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock x:Name="txtTitle" Text="File Name" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

		<Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="5">
			<ScrollViewer>
				<TextBox x:Name="boxFullTranscript" 
                         TextWrapping="Wrap" AcceptsReturn="True"
                         FontSize="16" IsReadOnly="True" BorderThickness="0"/>
			</ScrollViewer>
		</Border>

		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
			<Button x:Name="BtnCopy" Content="Copy to Clipboard" Click="BtnCopy_Click" Margin="0,0,10,0"/>
			<Button x:Name="BtnSave" Content="Save to File" Click="BtnSave_Click"/>
			<Button x:Name="BtnClose" Content="Close" Click="BtnClose_Click" Margin="10,0,0,0"/>
		</StackPanel>
	</Grid>
</Window>