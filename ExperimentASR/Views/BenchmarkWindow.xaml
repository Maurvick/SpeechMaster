<Window x:Class="ExperimentASR.Views.BenchmarkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentASR.Views"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Benchmark" Height="450" Width="800">
    <Grid>
		<Border BorderBrush="Gray" BorderThickness="1"
CornerRadius="8" Padding="16" Margin="10,10,439,10">
			<StackPanel Margin="0,0,0,47">
				<TextBlock x:Name="blockWaveform" Text="Waveform" FontWeight="SemiBold" Margin="0,0,0,10"/>

				<Border Height="120" 
        CornerRadius="8">
					<TextBlock x:Name="blockWaveformVisualizer" Text="Waveform Visualizer" 
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
				</Border>

				<TextBlock x:Name="blockTimer" Text="Timer:" Margin="0,20,0,0"/>
				<TextBlock x:Name="blockTime" Text="00:00:00" FontSize="24" FontWeight="Bold"/>

				<TextBlock x:Name="blockAccuracyWer" Text="Accuracy (WER):" Margin="0,20,0,0"/>
				<TextBlock x:Name="blockAccuracyPercent" Text="-- %" FontSize="20" Foreground="#4CAF50"/>
				<Button x:Name="btnBenchmark" Content="Benchmark" Click="BtnBenchmark_Click"/>
			</StackPanel>
		</Border>

		<DataGrid x:Name="BenchmarkDataGrid" AutoGenerateColumns="False" Margin="400,10,10,10" 
        BorderBrush="Gray" BorderThickness="1" Padding="16">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Model" Binding="{Binding ModelName}" Width="*"/>
                <DataGridTextColumn Header="WER (%)" Binding="{Binding AverageWer, StringFormat={}{0:F2}%}" Width="80"/>
                <DataGridTextColumn Header="RTF" Binding="{Binding AverageRtf, StringFormat={}{0:F3}x}" Width="70"/>
                <DataGridTextColumn Header="Tests" Binding="{Binding TestsCount}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
